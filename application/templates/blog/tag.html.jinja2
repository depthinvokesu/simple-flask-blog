{% extends 'layout.html.jinja2'%}

{% block title %}
Blog
{% endblock title %}

{% block content_title %}
<div class="content_title">
    <p>Posts marked with <span class="badge text-bg-primary">{{slug}}</span> tag:</p>
</div>
{% endblock %}

{% block content %}
<div class="posts_list">
    {% if posts %}
        {%for post in posts%}
            <p><a href="{{url_for('blog.view_post', slug=post.slug)}}">{{post.title}}</a></p>
        {%endfor%}
    {% endif %}
</div>
{% endblock %}